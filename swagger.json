{
    "openapi": "3.0.0",
    "info": {
        "title": "API - Sistema de agendamento Fcamara",
        "description": "API para agendamento de estação de trabalho na Fcamara",
        "contact": 
        {
            "name": "Github do projeto" ,
            "url": "https://github.com/hebertdelima13/agenda-fcamara-api"
        },
        "version": "1.0.0"          
    },
    
    "servers": [
        {
            "url": "http://localhost:5000/",
            "description": "API de test"
        }
    ],

    "paths": {
        "/user/signup" :{
            "post": {
                "summary": "Cadastro de usuários",
                "description": "Essa rota será responsável por cadastrar usuários",
                "tags": ["User Sign up"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSignup"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "John Smith",
                                        "email": "johnsmith@host.com",
                                        "password": "123456"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "401": {
                        "description": "E-mail já existe!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserSignup"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/signin": {
            "post": {
                "summary": "Login de usuários",
                "description": "Essa rota será responsável por logar usuários",
                "tags": ["User Sign in"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSignin"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "johnsmith@host.com",
                                        "password": "123456"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "401": {
                        "description": "E-mail ou senha inválido!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserSignin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/me": {
            "get": {
                "summary": "Informações do usuário",
                "description": "Essa rota será responsável por obter informações do usuário",
                "tags": ["User"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserInfo"
                                }
                            }
                        }
                    }
                }
            },
            "put": {
                "summary": "Editar o usuário",
                "description": "Essa rota será responsável por editar o usuário",
                "tags": ["User"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserEdit"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "John Smith"
                                    }
                                }
                            }
                        }
                    }
                },
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses" :{
                    "400": {
                        "description": "E-mail já existe!"
                    },
                    "401": {
                        "description": "Dados inválido!"
                    },
                    "200": {
                        "description": "Dados alterados com sucesso!"                        
                    }
                }
            },
            "delete": {
                "summary": "Deletar o usuário",
                "description": "Essa rota será responsável por deletar o usuário",
                "tags": ["User"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "401": {
                        "description": "Failed deleting user"
                    },
                    "200": {
                        "description": "Successfully deleted"                        
                    }
                }
            }
        },
        "/appoint": {
            "post": {
                "summary": "Criar agendamento",
                "description": "Essa rota será responsável por criar agendamento do usuário",
                "tags": ["Appoint"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AppointCreate"
                            },
                            "examples": {
                                "appoint": {
                                    "value": {
                                        "unit": "São Paulo",
                                        "ap_date": "2021-09-30"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/AppointCreate"
                                }
                            }
                        }
                    }
                }
            },
            "get": {
                "summary": "Lista os agendamentos do usário",
                "description": "Essa rota será responsável por listar os agendamentos do usuário",
                "tags": ["Appoint"],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],                
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "401": {
                        "description": "Failed loading appointment"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/AppointInfo"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/appoint/{id}": {
            "put": {
                "summary": "Editar agendamento",
                "description": "Essa rota será responsável por editar agendamento do usuário",
                "tags": ["Appoint"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/AppointEdit"
                            },
                            "examples": {
                                "appoint": {
                                    "value": {
                                        "unit": "São Paulo",
                                        "ap_date": "2021-09-30"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "401": {
                        "description": "Failed updating appointment"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/AppointEdit"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deleta os agendamentos do usário",
                "description": "Essa rota será responsável por deletar os agendamentos do usuário",
                "tags": ["Appoint"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],   
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/appointId"
                            },
                            "examples": {
                                "appointId": {
                                    "value": {
                                        "id": "613f3f9114b13861e4e6138a"
                                    }
                                }
                            }
                        }
                    }
                },             
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "401": {
                        "description": "Failed deleting appointment"
                    },
                    "200": {
                        "description": "Successfully deleted"
                    }
                }
            }
        }           
    },

