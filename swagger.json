{
    "openapi": "3.0.0",
    "info": {
        "title": "API - Sistema de agendamento Fcamara",
        "description": "API para agendamento de estação de trabalho na Fcamara",
        "contact": 
        {
            "name": "Github do projeto" ,
            "url": "https://github.com/hebertdelima13"
        },
        "version": "1.0.0"          
    },
    
    "servers": [
        {
            "url": "http://localhost:5000/",
            "description": "API de test"
        }
    ],

    "paths": {
        "/user/signup" :{
            "post": {
                "summary": "Cadastro de usuários",
                "description": "Essa rota será responsável por cadastrar usuários",
                "tags": ["User Sign up"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSignup"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "name": "John Smith",
                                        "email": "johnsmith@host.com",
                                        "password": "123456"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "401": {
                        "description": "E-mail já existe!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserSignup"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/signin": {
            "post": {
                "summary": "Login de usuários",
                "description": "Essa rota será responsável por logar usuários",
                "tags": ["User Sign in"],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {
                                "$ref": "#/components/schemas/UserSignin"
                            },
                            "examples": {
                                "user": {
                                    "value": {
                                        "email": "johnsmith@host.com",
                                        "password": "123456"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses" :{
                    "400": {
                        "description": "Dados inválidos"
                    },
                    "401": {
                        "description": "E-mail ou senha inválido!"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserSignin"
                                }
                            }
                        }
                    }
                }
            }
        },
        "/user/me": {
            "get": {
                "summary": "Informações do usuário",
                "description": "Essa rota será responsável por obter informações do usuário",
                "tags": ["User"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses" :{
                    "400": {
                        "description": "Token not provided"
                    },
                    "200": {
                        "description": "OK",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/UserGet"
                                }
                            }
                        }
                    }
                }
            },
            "delete": {
                "summary": "Deletar o usuário",
                "description": "Essa rota será responsável por deletar o usuário",
                "tags": ["User"],
                "security": [],
                "parameters": [{
                    "name": "token",
                    "in": "header",
                    "required": true,
                    "type": "string"
                }],
                "responses" :{
                    "400": {
                        "description": "Successfully deleted"
                    },
                    "200": {
                        "description": "OK"                        
                    }
                }
            }
        }        
    },

    "components": {
        "schemas": {
            "UserSignup": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "UserSignin": {
                "type": "object",
                "properties": {
                    "email": {
                        "type": "string"
                    },
                    "password": {
                        "type": "string"
                    }
                }
            },
            "UserGet": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "email": {
                        "type": "string"
                    }
                }
            }
        }
    }
     
}